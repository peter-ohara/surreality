    <div class="row">
     <div class="col-md-4">
      <!--Column left Search group-->
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @listing.listing_name %></h3>
        </div>
        <div class="panel-body">


          <!--List view of Home details-->  
          <div class="list-group">
            <a href="#" class="list-group-item active">
              <span class="glyphicon glyphicon-home"></span> Home Details <span class="badge"></span>
            </a>
            <a href="#" class="list-group-item">
              <span class=""></span> Price<span class="badge"> GHC <%= @listing.price %></span>
            </a>
            <a href="#" class="list-group-item">
              <span class=""></span> Bedrooms<span class="badge">4</span>
            </a>
            <a href="#" class="list-group-item">
              <span class="g"></span> Bathrooms <span class="badge">3</span>
            </a>
            <a href="#" class="list-group-item">
              <span class="g"></span> Property type<span class="badge">Residential</span>
            </a>
          </div> <br>
          <div class="list-group">
            <a href="#" class="list-group-item active">
              <span class="glyphicon glyphicon-info-sign"></span> Features <span class="badge"></span>
            </a>
            <a href="#" class="list-group-item">
              <span class="g"></span> Colonial Architecture <span class="badge"></span>
            </a>
            <a href="#" class="list-group-item">
              <span class="g"></span> Age<span class="badge">20 Yrs</span>
            </a>
            <a href="#" class="list-group-item">
              <span class=""></span> Parking space<span class="badge"></span>
            </a>
            <a href="#" class="list-group-item">
              <span class=""></span> Basement<span class="badge"></span>
            </a>
            <a href="#" class="list-group-item">
              <span class=""></span> Security<span class="badge">CCTV<br></span>
            </a>
          </div>

          <br> <br><button type="submit" class="btn btn-primary">Request More Information</button>

          <H4>Popular Homes</H4><br>

          <div class="thumbnails">
            <div class="">
              <li class="span2 thumbnail">

                <%= link_to @listings.first do %>
                  <%= image_tag @listings.first.photo_attachments.first.photo.url if !@listings.first.photo_attachments.empty? %>
                <% end %>

                <div class="caption">
                  <p><%= "GHC #{@listings.first.price}, #{@listings.first.address}" %></p>
                </div>
              </li>
            </div>
          </div>
          
        </div>
      </div><br>
      <!--Map View-->
      <div class="col-md-4">
       <!--Insert Map here-->
     </div>

   </div>
   


  <!--Column right Model/video/photo view-->       
  <div class="col-md-8">

    <% if !@listing.three_d_models.empty? %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= raw @listing.three_d_models.first.embed_link %>
        </div>
      </div>
    <% end %>

    <% if !@listing.three_sixty_videos.empty? %>
      <div class="thumbnail">
        <%= raw @listing.three_sixty_videos.first.embed_link %>
        <div class="caption">
          <p>
            <ul class="list-inline">
              <li><%= @listing.address %></li>
              <li><span>3</span>bedrooms</li>
              <li>Single-Family Home</li>
              <li>Built in <span>1984</span></li>
              <li>Compound size:<span>19089</span>sqft</li>
            </ul>
          </p>
        </div>
      </div>
    <% end %>

    <% if !@listing.three_sixty_photos.empty? %>
      <div class="thumbnail">
        <%= raw @listing.three_sixty_photos.first.embed_link %>
      </div>
    <% end %>

    <br>

    <div class="thumbnails">
      <% @listings.each do |listing| %>
        <div class = "col-sm-4 col-md-4">
          <li class="span2 thumbnail">

            <%= link_to listing do %>
              <%= image_tag listing.photo_attachments.first.photo.url if !listing.photo_attachments.empty? %>
            <% end %>

            <div class="caption">
              <p><%= "GHC #{listing.price}, #{listing.address}" %></p>
            </div>
          </li>
        </div>
      <% end %>
    </div>
  </div>

</div>
<!--Row with three equal columns-->
<div class="row">
  <div class="col-md-4"><!--Column left-->
    <!--Column left Search group-->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Location and criteria</h3>
      </div>
      <div class="panel-body">

        <form class="form-inline">
          <label class="">Location</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="" name=""><br>
          <label class="" >Property type</label>&nbsp;
          <select class="" >
            <option selected>Any</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
          <br>
          <label class="" >Bedrooms</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <select class="" >
            <option selected>Any</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
          <br>
          <label class="">Cost</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <select class="" >
            <option selected>Min</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
          <select class="" >
            <option selected>Max</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>

          <br><button type="submit" class="btn btn-primary">Search</button>
        </form>
      </div>
    </div><br>
    <!--Map View-->
    <div class="col-md-4">
     <!--Insert Map here-->MAp Here
    </div>
  </div>

  <div class="col-md-8"><!--Column right-->

    <div class="thumbnails">

      <% @listings.each do |listing| %>
        <div class = "col-sm-6 col-md-6">
          <li class="span2 thumbnail">

            <%= link_to listing do %>
              <%= image_tag listing.photo_attachments.first.photo.url if !listing.photo_attachments.empty? %>
            <% end %>

            <div class="caption">
              <p><%= "GHC #{listing.price}, #{listing.address}" %></p>
            </div>
          </li>
        </div>
      <% end %>

    </div>

  </div>
</div>
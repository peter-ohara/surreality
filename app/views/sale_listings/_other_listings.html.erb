<% unless @listings.empty? %>
    <div class="row">
      <div class="col-md-12">
        <h4>Other listings in this area</h4>
      </div>
    </div>

    <div class="row">
      <% @listings.each do |listing| %>
          <div class="col-sm-4 col-md-4">
            <li class="thumbnail">

              <%= link_to listing do %>
                  <%= image_tag listing.sale_photo_attachments.first.photo.url if !listing.sale_photo_attachments.empty? %>
              <% end %>

              <div class="caption">
                <p>
                  <%= "GHC #{listing.price}, #{listing.address}" %>
                </p>
              </div>
            </li>
          </div>
      <% end %>
    </div>
<% end %>


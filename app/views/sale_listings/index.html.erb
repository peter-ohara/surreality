<%= render 'layouts/homepage_header' %>

<br><br><br>

<div class="container">
  <div class="col-sm-12" id="clone">
    <p class="tagline">
        <span>
        <b>
            Great homes and neighbourhoods start with Surreal. <br>
        </b>
        <small style="color: #616161;">
            Make informed decisions about which place to rent
        </small>
        </span>
    </p>
  </div>
</div>

<br><br>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render 'search_form' %>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4>Popular neighbourhoods</h4><br>
    </div>
  </div>

  <div class="row">
    <% @listings.reverse.take(3).each do |listing| %>
        <div class="col-sm-4 col-md-4">
          <div class="thumbnail">

            <%= link_to listing do %>
                <% unless listing.sale_photo_attachments.empty? %>
                      <%= cl_image_tag(listing.sale_photo_attachments.first.photo.full_public_id,
                                       :width=>400, :crop=>"limit", :secure=>true) %>
                <% end %>
            <% end %>

            <div class="caption">
              <p>
                <strong><%= "GHC #{listing.price} - 3bd" %>
                  <span class="pull-right">
                                <i class="glyphicon glyphicon-star"></i>
                                <i class="glyphicon glyphicon-star"></i>
                                <i class="glyphicon glyphicon-star"></i>
                                <i class="glyphicon glyphicon-star"></i>
                             </span><br>
                </strong><%= "#{listing.address}" %>
              </p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>